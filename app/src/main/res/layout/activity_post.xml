<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMain"
    android:orientation="vertical"
    tools:context=".views.PostActivity">

    <!--<include android:id="@+id/cust_tool"-->
        <!--layout="@layout/custom_toolbar"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/post_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.6"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_post_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Post Title"/>

            <EditText
                android:id="@+id/et_post_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Post Description"/>

            <Button
                android:id="@+id/btn_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/btnRegister"
                android:text="Write Post"
                android:textAllCaps="false"
                 android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_sign_in_background"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>